<script>
    $(document).ready(function() {

        // pass the video ID into the iframe on click/tap
        $('a.ce-video-thumb').click(function() {

            // Grab the video ID from the element clicked
            var id = $(this).attr('ce-video-brightcove-id');

            // Stringing the ID and param variables together
            var src = '//players.brightcove.net/24953835001/S1eSKXc0b_default/index.html?videoId=' + id;

            // Set the source on the iframe template inside the video modal
            $("#ce-brightcove-video").attr('src', src);
            return false;

        });

        /* Modal View
        -------------------------------------------------------------------------------*/
        function toggle_video_modal() {

            // Open the Video Modal
            $(".ce-trigger-modal").on("click", function(event) {
                event.preventDefault();
                $("#ce-video-content").addClass("show-ce-video-modal");
            });

            // Close and Reset the Video Modal
            $('#ce-video-content').on('click', '.close-ce-video-modal, .ce-video-modal .ce-overlay', function(event) {
                event.preventDefault();

                $("#ce-video-content").removeClass("show-ce-video-modal");

                // reset the source attribute - kills the video
                $("#ce-brightcove-video").attr('src', '');
            });
        }
        toggle_video_modal();



    });
</script>
