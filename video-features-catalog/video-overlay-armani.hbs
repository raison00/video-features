<script>
$(document).ready(function(){

	// pass the video ID into the iframe on click/tap
	$('a.video-thumb').click(function () {
		
		// Grab the video ID from the element clicked
		var id = $(this).attr('data-id');

		// String the ID and param variables together
		var src = '//players.brightcove.net/24953835001/e87f3d8a-35ea-478a-a4a7-70d26d18f6c7_default/index.html?videoId='+id;
		
		// Set the source on the iframe template inside the video modal
		$("#ce-bc-video").attr('src', src);
		return false;
	
	});


	/* Modal View
	-------------------------------------------------------------------------------*/
	function toggle_video_modal() {
	    
	    // Open the Video Modal
	    $(".js-trigger-modal").on("click", function(event){
	        event.preventDefault();
	        $("body").addClass("show-ce-video-modal");
	    });

	    // Close and Reset the Video Modal
	    $('body').on('click', '.close-ce-video-modal, .ce-video-modal .ce-overlay', function(event) {
	        event.preventDefault();
	        
	        $("body").removeClass("show-ce-video-modal");
			
	        // reset the source attribute for the iframe template - kills the video
			$("#ce-bc-video").attr('src', '');
	    });
	}
	toggle_video_modal();



});        
        
</script>










